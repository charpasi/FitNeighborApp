<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fitneighborapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitNeighborApp"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Messages Activity -->
        <activity
            android:name=".messages.MessagesActivity"
            android:exported="false"
            android:label="@string/title_activity_messages"
            android:theme="@style/Theme.FitNeighborApp" />

        <!-- Challenges Activity -->
        <activity
            android:name=".challenges.ChallengesActivity"
            android:exported="false"
            android:label="@string/title_activity_challenges"
            android:theme="@style/Theme.FitNeighborApp" />

        <!-- Quick Challenges Activity -->
        <activity
            android:name=".QuickChallengeActivity"
            android:exported="true"
            android:label="Quick Challenges"
            android:theme="@style/Theme.FitNeighborApp" />

        <!-- Current Activity -->
        <activity
            android:name=".CurrentActivity"
            android:exported="true"
            android:label="Current Activity"
            android:theme="@style/Theme.FitNeighborApp"
            tools:ignore="Instantiatable" />
    </application>

</manifest>
